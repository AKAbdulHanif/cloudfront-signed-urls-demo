# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "cloudfront-signedurl-demo"
aws_region   = "us-east-1"
environment  = "prod"

# Custom Domain Configuration
# Set custom_domain_enabled = true to use your own domain
# Requires a Route53 hosted zone for domain_name
custom_domain_enabled = true
domain_name          = "example.com"        # Your root domain (must have Route53 hosted zone)
subdomain            = "cdn"                # Subdomain for CloudFront (e.g., cdn.example.com)

# CloudFront Signed URL Expiration
upload_expiration   = 900    # 15 minutes
download_expiration = 3600   # 1 hour

# Lambda Configuration
lambda_memory_size = 512
lambda_timeout     = 30
lambda_runtime     = "python3.11"

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED"
dynamodb_ttl_enabled  = true
dynamodb_ttl_attribute = "ttl"

# S3 Configuration
s3_versioning_enabled        = true
s3_lifecycle_enabled         = false
s3_lifecycle_expiration_days = 30

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"  # US, Canada, Europe
cloudfront_min_ttl     = 0
cloudfront_default_ttl = 0
cloudfront_max_ttl     = 0

# API Gateway Configuration
api_gateway_stage_name           = "prod"
api_gateway_throttle_burst_limit = 5000
api_gateway_throttle_rate_limit  = 10000

# Security Configuration
enable_waf         = false
allowed_ip_ranges  = []  # Empty = allow all

# Monitoring Configuration
enable_cloudwatch_logs = true
log_retention_days     = 30

# Advanced Configuration
enable_point_in_time_recovery     = false
enable_s3_encryption              = true
cloudfront_geo_restriction_type   = "none"  # none, whitelist, or blacklist
cloudfront_geo_restriction_locations = []

# Tags
tags = {
  Project     = "CloudFront Signed URLs Demo"
  ManagedBy   = "Terraform"
  Environment = "Production"
  Owner       = "Your Name"
}
